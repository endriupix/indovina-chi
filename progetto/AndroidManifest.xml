<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="project.wirelessnetwork"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="8" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:debuggable="true" >
        
        <activity
            android:screenOrientation="landscape"
            android:label="@string/app_name"
            android:name=".NewGameActivity" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ChoiceFaceActivity" android:screenOrientation="landscape"></activity>
        <activity android:name=".NewGameActivity" android:screenOrientation="landscape"></activity>
        <activity android:name=".ConnectDevice" android:screenOrientation="landscape"></activity>
        <activity android:name=".DeviceListActivity" android:screenOrientation="landscape"
            android:theme="@android:style/Theme.Dialog"
            android:configChanges="orientation|keyboardHidden"></activity>
        <activity 
            android:screenOrientation="landscape"
            android:name=".StoryActivity" ></activity>
        <activity 
            android:screenOrientation="landscape"
            android:name=".InstructionActivity"></activity>
        <activity 
            android:screenOrientation="landscape"
            android:name=".MakeQuestionActivity"
            android:theme="@android:style/Theme.Dialog"></activity>
    </application>

</manifest>